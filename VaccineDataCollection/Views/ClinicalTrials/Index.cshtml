@model IEnumerable<VaccineDataCollection.Models.ClinicalTrial>

@{
    ViewData["Title"] = "Clinical Trials - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clinical Trials</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrialName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrialDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrialLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrialName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrialDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrialLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrialID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.TrialID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
