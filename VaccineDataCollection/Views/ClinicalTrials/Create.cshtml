@model VaccineDataCollection.ViewModels.ClinicalTrialForm

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ClinicalTrial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClinicalTrial.TrialName" class="control-label">Name</label>
                <input asp-for="ClinicalTrial.TrialName" class="form-control" />
                <span asp-validation-for="ClinicalTrial.TrialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicalTrial.TrialDesc" class="control-label">Description</label>
                <textarea asp-for="ClinicalTrial.TrialDesc" class="form-control" ></textarea>
                <span asp-validation-for="ClinicalTrial.TrialDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicalTrial.TrialLocation" class="control-label">Location</label>
                <input asp-for="ClinicalTrial.TrialLocation" class="form-control" />
                <span asp-validation-for="ClinicalTrial.TrialLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ClinicalTrial.VaccineID" required class="form-control" asp-items="@Model.VaccineList">
                    <option value="" disabled selected>
                        Select Vaccine
                    </option>
                </select>
                <span asp-validation-for="ClinicalTrial.VaccineID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
